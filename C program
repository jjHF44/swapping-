#include <stdio.h>

int main()
{
   //variable declaration
   int a,b;
   
   //input values
   printf("Enter the value of a:");
   scanf("%d",&a);
   printf("Enter the value of b:");
   scanf("%d",&b);
   
   //numbers before swapping 
   printf("Before swapping... a: %d, b: %d\n",a,b);
   
   //swapping numbers
   a=a+b;  //step1
   b=a-b;  //step2
   a=a-b;  //step3
   
   //numbers after swapping
   printf("After swapping... a: %d, b: %d\n",a,b);
   
   return 0;
   
